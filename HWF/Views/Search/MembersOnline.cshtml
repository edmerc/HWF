<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Members Online</h3>
    </div>
    <div class="panel-body">    
        @foreach (var item in Model.Members)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span>@Html.ActionLink(item.ProfileName, "Profile", "Member", new { id = item.ID }, null)</span>
                </div>
                <div class="panel-body">    
                    <img src="~/Content/Images2/Female-Avatar   .png" width="80" height="100" style="float:left" />
                    <p>Her: @item.Her</p>
                    <p>Him: @item.Him</p>
                    <p>Seeking: @item.Seeking</p>
                    <br />
                    <p>City: @item.City, State: @item.State, Country: @item.Country</p>
                </div>
            </div>

        }
    </div>
</div>

